---
interface Props {
	name: string;
	address: string;
	body: string;
}

import Botones from './botones.astro';

const { address, name, body } = Astro.props;
---

<li class="link-card">
	<div>
		<div class="jesica"></div>
		<h2>
			{name}
	
		</h2>

		<h4>
			{address}
		</h4>
		<p>
			{body}
		</p>

		<Botones/>
	</div>
</li>
<style >
	.link-card {
		list-style: none;
		display: flex;
		max-width: 400px;
		padding: 1px;
		background-color: rgb(var(-Grey));
		background-image: none;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		text-align: center;
	}
	.link-card > div {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}

	.jesica{
		width: 100px;
		height: 100px;
		margin: 0 auto;
		background-image: url(../assets/avatar-jessica.jpeg);
	background-size: contain;
		background-repeat: no-repeat;
		border-radius: 50%;
		margin-bottom: 20px;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		font-weight: bold;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

	h4{
		color: rgb(var(--Green));
	}
	
</style>

